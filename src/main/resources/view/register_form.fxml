<AnchorPane fx:id="root" prefHeight="596.0" prefWidth="828.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.RegisterFormController">
   <children>
      <ImageView fitHeight="649.0" fitWidth="900.0" layoutX="-72.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assests/images/ready-back-school.jpg" />
         </image>
      </ImageView>
      <Rectangle fx:id="loginAnc" arcHeight="40.0" arcWidth="40.0" fill="WHITE" height="503.0" layoutX="328.0" layoutY="33.0" opacity="0.5" stroke="#1a80e5" strokeType="INSIDE" strokeWidth="0.0" width="437.0" />
      <Label layoutX="427.0" layoutY="33.0" text="SIGN UP">
         <font>
            <Font name="Arial Black" size="48.0" />
         </font>
      </Label>
      <TextField fx:id="txtUsername" layoutX="394.0" layoutY="143.0" onAction="#usernameOnAction" prefHeight="46.0" prefWidth="303.0" promptText="Username" styleClass="signup" stylesheets="@../styles/textfield.css" />
      <ComboBox fx:id="cmbType" layoutX="439.0" layoutY="103.0" onAction="#cmbTypeOnAction" prefWidth="150.0" promptText="Select" styleClass="signup" stylesheets="@../styles/combobox.css">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></ComboBox>
      <TextField fx:id="txtEmail" layoutX="394.0" layoutY="197.0" onAction="#emailOnAction" prefHeight="46.0" prefWidth="303.0" promptText="Email" styleClass="signup" stylesheets="@../styles/textfield.css" />
