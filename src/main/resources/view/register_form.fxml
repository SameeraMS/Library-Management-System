         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Label layoutX="492.0" layoutY="504.0" text="User..?">
         <font>
            <Font name="Arial Black" size="14.0" />
         </font></Label>
      <Label layoutX="553.0" layoutY="504.0" onMouseClicked="#loginOnAction" text="Log in">
         <font>
            <Font name="Arial Black" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Label>
      <ComboBox fx:id="cmbBranch" layoutX="448.0" layoutY="416.0" prefWidth="150.0" promptText="Branch" styleClass="signup" stylesheets="@../styles/combobox.css">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></ComboBox>
      <TextField fx:id="txtTel" layoutX="394.0" layoutY="250.0" onAction="#telOnAction" prefHeight="46.0" prefWidth="303.0" promptText="Telephone" styleClass="signup" stylesheets="@../styles/textfield.css" />
